        $("#loading1").show();
        $("#TTPartImage").change(function () {
            var file = document.getElementById("TTPartImage").files[0];

            var formData = new FormData();
            formData.append(file.name, file);

            var TTID = $("#TechTipsID").val();
            var MoldID = $("#MoldDataID").val();

