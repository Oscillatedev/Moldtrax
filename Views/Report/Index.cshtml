            $("#EndDateVal").attr('disabled', 'disabled');
            $(".StatisticalRadioBtn").attr('disabled', 'disabled');
            $(".ReferenceRadioBtn").removeAttr('disabled');
        }

    }

    function MoldDataIDDrop() {
