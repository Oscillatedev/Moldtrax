    function CallType(ID) {
        debugger;
        if (ID == 1) {
            $("#StartDateVal").removeAttr('disabled');
            $("#EndDateVal").removeAttr('disabled');
            //$("input[type=radio]").attr('disabled', 'disabled');
            $(".StatisticalRadioBtn").removeAttr('disabled');
