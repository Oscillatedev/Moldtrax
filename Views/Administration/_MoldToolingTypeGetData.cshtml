                                type: "success"
                            }).then(function () {
                                $("#home").html(data);
                            })

                            //window.location.href = '/DetailMoldInfo/Index';
                        },
                        error: function () {
                            //$(".loader__wrap").hide();
                        }
                    });
                }
            })
        }
    }

    $('.MoldToolingTypeFocusOut').on('focusin', function () {
        $(this).data('val', $(this).val());
    });


