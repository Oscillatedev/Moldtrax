                        </div>
                        <div id="menu8" class="tab-pane fade">
                            @Html.Action("GetTechTips", "Administration")
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#navDetailMold').addClass('actives');
    });

    function CallDetailMoldItem(str)
    {

        var URL = "";

        if (str == "BaseStyle")
        {
            URL = "/Administration/GetBaseData";
        }
        else if (str == "Department")
        {
            URL = "/Administration/GetDepartment";
        }

        else if (str == "Product")
        {
            URL = "/Administration/GetProduct";
        }
        else if (str == "ProductPart")
        {
            URL = "/Administration/GetProductPart";
        }
        else if (str == "ResinType")
        {
            URL = "/Administration/GetResinType";
        }

        else if (str == "RunnerType")
        {
            URL = "/Administration/GetRunnerType";
        }

        else if (str == "ToolingType")
        {
            URL = "/Administration/GetToolingType";
        }

        else if (str == "TSGuide")
        {
            URL = "/Administration/GetTSGuideType";
        }
        else if (str == "Factors") {
            URL = "/Administration/GetFactors"
        }
        else
        {
            URL = "/Administration/GetTechTips";
        }

        $.ajax({
            url: URL,
            type: 'Post',
            success: function (data)
            {
                $("#home").html(data);
            },
            error: function ()
            {

            }
        })
    }

      
</script>
