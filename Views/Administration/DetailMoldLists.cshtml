                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" onclick="CallDetailMoldItem('TSGuide')" id="TSGuide" href="#">TS Guide Defect Type</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" onclick="CallDetailMoldItem('TechTips')" id="TechTips" href="#">Tech Tips Links</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" onclick="CallDetailMoldItem('Factors')" id="Factors" href="#">Factors</a>
                        </li>
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content" id="mold_detail_list_tab">
                        <div id="home" class="tab-pane active">
                            @Html.Action("GetBaseData","Administration")
                        </div>
