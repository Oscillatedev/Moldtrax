@model IEnumerable<Moldtrax.ViewMoldel.tblScheduleViewModel>
@{
}
<style>
    #table_master_schedule {
        display: table;
        border: 1px solid #343a40;
        border-collapse: collapse;
    }

    td {
        border: 1px solid #343a40;
        border-collapse: collapse;
    }

    th {
        border-right: 1px solid #898989;
        border-collapse: collapse;
    }

    #table_master_schedule td:first-child {
        text-align: center;
    }

    #table_master_schedule td {
        padding: 0 0 0 4px;
        margin: 0;
        vertical-align: middle;
    }

    #table_master_schedule .form-control, #table_master_schedule input {
        margin-bottom: 0;
        border: none !important;
        width: 100%;
        height: 38px;
        box-shadow: none !important;
        background: transparent;
    }

    #table_master_schedule th {
        vertical-align: middle;
        text-align: center;
        font-size: 14px;
        color: white;
        font-weight: 500;
        padding: 8px 4px;
        border-top: none;
        background: rgb(52, 58, 64);
        border-bottom: none;
        border-left: none;
    }

    #schActionItem {
        border: none !important;
    }

    .card_header h5 {
        text-align: center;
        color: #333;
        font-size: 20px;
        font-weight: 700;
        display: inline-block;
        font-family: 'Quicksand', sans-serif;
    }

    .card_header {
        text-align: center;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <div class="card box_design">
            <div class="card_header">
                <h5 class="main_top_head">Master Schedule</h5>
            </div>
            <div class="card_body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card_inner_block">
                            <table class="table table-bordered table-responsive" id="table_master_schedule">
                                <thead>
                                    <tr>
                                        <th class="td_schedule2">Date Noted</th>
                                        <th class="td_schedule3">Time</th>
                                        <th class="td_schedule4">Mold</th>
                                        <th class="td_schedule5">Priority</th>
                                        <th class="td_schedule6">Action Item</th>
                                        <th class="td_schedule7">Cycles</th>
                                        <th class="td_schedule8">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var x in Model)
                                    {
                                        <tr>
                                            <td>
                                                <input type="hidden" value="@x.SchID" id="SchID" />
                                                <input type="date" value="@Convert.ToDateTime(x.schDate).ToString("yyyy-MM-dd")" id="schDate" name="schDate" class="form-control">
                                            </td>
                                            <td>
                                                <input type="text" value="@Convert.ToDateTime(x.schTime).ToShortTimeString()" id="schTime" name="schTime" class="form-control">
                                            </td>
                                            <td>
                                                <input type="text" id="SchMoldID" value="@x.schMoldDataID" />
                                                @*<select id="SchMoldID" name="SchMoldID" class="form-control">
                                                        @foreach (var s in ViewBag.MoldText)
                                                        {
                                                            <option value="@s.Value">@s.Text</option>
                                                        }
                                                    </select>*@
                                            </td>
                                            <td>
                                                <input type="text" id="Priority" value="@x.schPriority" />
                                                @*<select id="schPriority" name="schPriority" class="form-control">
                                                        @for (int i = 1; i <= 9; i++)
                                                        {
                                                            <option>@i</option>
                                                        }
                                                    </select>*@
                                            </td>
                                            <td>
                                                @*<input type="text" value="@Html.Raw(x.schActionItem)" class="Trbleditable"/>*@
                                                <textarea id="schActionItem" name="schActionItem" class="Trbleditable">@x.NewSchActionItem</textarea>
                                            </td>
                                            <td>
                                                <input type="text" value="@string.Format("{0:n}", x.schCycles)" id="schCycles" name="schCycles" class="form-control">
                                            </td>
                                            <td>
                                                <input type="text" value="@x.schStatus" id="StatusVal" />
                                                @*<select class="form-control" id="schStatus" name="schStatus">
                                                        @foreach (var s in ViewBag.StatusVal)
                                                        {
                                                            <option value="@s.Text">@s.Text</option>
                                                        }
                                                    </select>*@
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
